{  
    "name": "bingo-soft/mybatis",
    "license": "MIT",
    "authors": [{
        "name": "Bingo-Soft",
        "email": "bingosoft@bk.ru"
    }],
    "description": "The MyBatis SQL mapper framework ported to PHP",
    "keywords": ["php", "sql", "mapper"],
    "homepage": "https://github.com/bingo-soft/mybatis",
    "type": "project",
    "config": {
        "vendor-dir": "./vendor",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "^8.1",
        "bingo-soft/sax": "*",
        "bingo-soft/heap": "*",
        "doctrine/dbal": "^3.5",
        "bingo-soft/juel": "*",
        "bingo-soft/util": "*"     
    },
    "require-dev": {
        "doctrine/coding-standard": "*",
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "MyBatis\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Tests\\": "./tests"
        }
    }
}
